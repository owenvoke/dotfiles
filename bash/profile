# Include local/bin directory
if [ -d "/usr/local/bin" ]; then
    PATH="/usr/local/bin:$PATH"
fi

# Include custom dotfiles bin directory
if [ -d "$HOME/.dotfiles/bin" ]; then
    PATH="$HOME/.dotfiles/bin:$PATH"
fi

# Include Composer bin directory
if [ -d "$HOME/.composer/vendor/bin" ]; then
    PATH="$HOME/.composer/vendor/bin:$PATH"
elif [ -d "$HOME/.config/composer/vendor/bin" ]; then
    PATH="$HOME/.config/composer/vendor/bin:$PATH"
fi

# Include Yarn bin directory
if [ -d "$HOME/.yarn/bin" ]; then
    PATH="$HOME/.yarn/bin:$PATH"
fi

# Ledger BOLOS development
if [ -d "$HOME/.bolos-dev" ]; then
    export BOLOS_ENV="$HOME/.bolos-dev"
    export BOLOS_SDK="$BOLOS_ENV/nanos-secure-sdk"
fi
