# Shortcuts
alias cls="clear"
alias ll="ls -alF"
alias la="ls -A"
alias l="ls -CF"

# General
alias get-ip="echo $(curl -s https://canihazip.com/s)"

# Laravel
alias a="php artisan"
alias artisan="php artisan"

# PHP
alias c="composer"
alias cfresh="rm -rf vendor/ composer.lock && composer i"

# JavaScript
alias n="npm"
alias nfresh="rm -rf node_modules/ package-lock.json && npm i"

# Functions
function proj() {
  cd "$HOME/projects/$1" || return
  printf "\033c"
}

test -r $HOME/.shell-aliases.local && . $HOME/.shell-aliases.local
